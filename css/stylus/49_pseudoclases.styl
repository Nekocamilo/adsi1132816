body
	background-color #adf512
	color #6f7f39
	font 16px Arial
section
	background-color #dfff73
	border 10px solid #6f7f39
	padding 20px
	margin 20px auto
	width 800px
	/* PseucoClases para enlaces */
nav a:link
nav a:visited
	background-color #6f7f39
	border 4px solid #6f7f39
	color black
	display inline-block
	text-decoration none
	padding 20px 10px
	text-align center
	width 150px
nav a:hover
	background-color  #black
	border 2px solid #a9e5ff
	color #f5d8a1
nav a:active
	background-color #992956
	border 4px solid #992959
	color #fff
/* PseucoClases para elementos de formulario */
input
	background-color #6f7f39
	border none
	color black
	font-size 1.2em
	display block 
	outline none
	padding 20px
	width 96%
input:focus
	background-color #94a94c
/* Insertar contenido Artes-Despues */
div.box::after,
div.box::before
	content ''
	position absolute
div.box
	background-color #6c395c
	height 200px
	top 0
	left 0
	width 200px
div.box::after
	background-color crimson
	height 100px
	top 0
	left 100px
	width 100px
div.box::before
	background-color crimson
	height 100px
	top 100px
	left 0px
	width 100px

	
	